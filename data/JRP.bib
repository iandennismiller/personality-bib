  keywords = {Assessment contexts | Autobiographical narratives | Key autobiographical scenes | Life stories | Narrative identity},
  
}

@article{{10.1016/j.jrp.2016.09.003},
  title = {Age and gender differences in implicit motives},
  author = {Denzinger, Ferdinand;Backes, Sabine;Job, Veronika;Brandstätter, Veronika},
  year = {2016-12-01},
  volume = {None},
  issn = {00926566},
  abstract = {© 2016 Elsevier Inc. Research on age differences in implicit motives is rare and has shown contradictory results. We investigated age and gender differences in implicit motives (achievement, power, affiliation and intimacy), measured by the Picture Story Exercise (PSE), in an extensive, heterogeneous dyadic sample of 736 adults aged 20–80 years. Data were analyzed with a multilevel approach. Results indicate lower motive scores in all four measured motives in aged as compared to young adults but higher scores in activity inhibition. Further, women scored higher in affiliation and intimacy motives than men, while men scored higher in achievement and power motives and in activity inhibition than women. Possible underlying affective and neuroendocrinological processes of age dependent change in implicit motives are discussed.},
