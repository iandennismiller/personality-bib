  keywords = {Agency | Communion | IAT | Implicit self-esteem | Narcissism},
  
}

@article{{10.1016/j.jrp.2018.02.007},
  title = {Subjective well-being and academic achievement: A meta-analysis},
  author = {Bücker, Susanne;Nuraydin, Sevim;Simonsmeier, Bianca A.;Schneider, Michael;Luhmann, Maike},
  year = {2018-06-01},
  volume = {None},
  issn = {00926566},
  abstract = {© 2018 Elsevier Inc. Is the subjective well-being (SWB) of high-achieving students generally higher compared to low achieving students? In this meta-analysis, we investigated the association between SWB and academic achievement by synthesizing 151 effect sizes from 47 studies with a total of 38,946 participants. The correlation between academic achievement and SWB was small to medium in magnitude and statistically significant at r = 0.164, 95% CI [0.113, 0.216]. The correlation was stable across various levels of demographic variables, different domains of SWB, and was stable across alternative measures of academic achievement or SWB. Overall, the results suggest that low-achieving students do not necessarily report low well-being, and that high-achieving students do not automatically experience high levels of well-being.},
