@article{{10.1016/j.jrp.2019.06.012},
  title = {Implicit achievement motive limits the impact of task difficulty on effort-related cardiovascular response},
  author = {Mazeres, Florence;Brinkmann, Kerstin;Richter, Michael},
  year = {2019-10-01},
