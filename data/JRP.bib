  keywords = {Bereavement | Child loss | HILDA: subjective well-being | Major life stressors | Resilience},
  
}

@article{{10.1016/j.jrp.2017.04.005},
  title = {Examining the effect of affect on life satisfaction judgments: A within-person perspective},
