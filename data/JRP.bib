  keywords = {Effort | Implicit achievement motive | Motivational intensity theory | Pre-ejection period | Task difficulty},
  
}

@article{{10.1016/j.jrp.2019.07.002},
  title = {Clarifying the associations between Big Five personality domains and higher-order psychopathology dimensions in youth},
  author = {Watts, Ashley L.;Poore, Holly E.;Lilienfeld, Scott O.;Waldman, Irwin D.},
