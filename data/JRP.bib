}

@article{{10.1016/j.jrp.2019.07.001},
  title = {‘Check Your Selfie before You Wreck Your Selfie’: Personality ratings of Instagram users as a function of self-image posts},
  author = {Barry, Christopher T.;McDougall, Katrina H.;Anderson, Alexandra C.;Perkins, Madison D.;Lee-Rowland, Lauren M.;Bender, I.;Charles, Nora E.},
