  keywords = {Conservatism | Ideology | Language | Moral foundations theory | Morality | Replication},
  
}

@article{{10.1016/j.jrp.2019.103902},
  title = {Having less, giving more? Two preregistered replications of the relationship between social class and prosocial behavior},
  author = {Stamos, Angelos;Lange, Florian;Huang, Szu chi;Dewitte, Siegfried},
  year = {2020-02-01},
  volume = {None},
  issn = {00926566},
  abstract = {© 2019 Elsevier Inc. In the present report, we describe two planned direct replications of studies on the relationship between social class and prosocial behavior. In the original studies, individuals with higher socioeconomic status have been shown to behave less prosocially across a variety of domains. This finding continues to influence both research and the public debate on the psychological correlates of social class. At the same time, the validity of the original findings has been contested. Against this background, pre-registered direct replication studies with sufficient statistical power are warranted to test the robustness of these influential findings. We conducted two replication studies to provide valuable diagnostic information with regard to the relationship between social class and prosocial behavior. Our results indicate that the generalizability of the original findings may be much more limited than suggested. In addition, they highlight the need for an increased reliance on psychometrically established measures to facilitate cumulative research on the relationship between social class and prosocial behavior.},
