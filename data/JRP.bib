  keywords = {Accuracy | Assumed similarity | Conflict resolution | Interpersonal perception | Projection | Same-sex couples | Same-sex relationships | Truth and bias},
  
}

@article{{10.1016/j.jrp.2016.10.003},
  title = {The network of conscientiousness},
  author = {Costantini, Giulio;Perugini, Marco},
  year = {2016-12-01},
  volume = {None},
  issn = {00926566},
  abstract = {© 2016 Elsevier Inc. According to the network perspective, the coalescence of several personality characteristics into major personality dimensions results from a pattern of complex interactions that can be modeled as a network. We focused on one personality dimension, conscientiousness, and on its main facets. We administered a large battery of questionnaires to two samples (N = 210 and N = 230) and analyzed them by means of network analysis. The results showed that some elements of the network, such as general self-control and orientation toward the future, characterized all facets. These “shared” elements could be responsible for the facets to clump into one major dimension. Other elements of the network uniquely characterized different facets. These “unique” elements could underlie the main differences among conscientiousness facets.},
